<UserControl x:Class="CalendarWpfApp.MonthsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarWpfApp"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="White"
             SnapsToDevicePixels="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid Margin="5">
            <TextBlock x:Name="yearTextBlock"
                       Foreground="Black"
                       FontSize="14"
                       FontWeight="SemiBold"
                       FontStretch="Normal"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Cursor="Hand"
                       MouseLeftButtonDown="yearTextBlock_MouseLeftButtonDown" />
        </Grid>

        <Border x:Name="canvasBorder"
                BorderThickness="1"
                BorderBrush="LightGray"
                Margin="5"
                Grid.Row="1" />
    </Grid>
</UserControl>

