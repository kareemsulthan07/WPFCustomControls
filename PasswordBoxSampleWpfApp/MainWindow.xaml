<Window x:Class="PasswordBoxSampleWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxSampleWpfApp"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <StackPanel Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="Default .NET PasswordBox"
                       FontSize="20" />
            <PasswordBox Height="35"
                         FontSize="16"
                         VerticalContentAlignment="Center"
                         Password="somerandmopassword" />

            <TextBlock Text="Custom PasswordBox"
                       FontSize="20"
                       Margin="0,50,0,0" />

            <Border BorderBrush="LightGray"
                    BorderThickness="1"
                    Width="300"
                    Height="35"
                    HorizontalAlignment="Left">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="textBox"
                             FontSize="16"
                             Padding="2.5"
                             BorderThickness="0"
                             VerticalContentAlignment="Center"
                             TextChanged="textBox_TextChanged" />

                    <PasswordBox x:Name="passwordBox"
                                 Password="weaka**password"
                                 FontSize="16"
                                 Padding="2.5"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 PasswordChanged="passwordBox_PasswordChanged" />

                    <ToggleButton x:Name="toggleButton"
                                  BorderThickness="0"
                                  Width="35"
                                  Grid.Column="1"
                                  Checked="toggleButton_Checked"
                                  Unchecked="toggleButton_Unchecked">
                        <Grid>
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       Text="&#xF78D;" />

                            <TextBlock x:Name="cancelTextBlock"
                                       FontSize="16"
                                       FontFamily="Segoe MDL2 Assets"
                                       Text="&#xE711;">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility"
                                                Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=toggleButton,Path=IsChecked}"
                                                         Value="True">
                                                <Setter Property="Visibility"
                                                        Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ToggleButton>
                </Grid>
            </Border>
        </StackPanel>




    </Grid>
</Window>
